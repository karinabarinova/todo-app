mixin navbar(user)
        nav.navbar.navbar-expand.navbar-dark.bg-dark
            .collapse.navbar-collapse
                ul.navbar-nav.mr-auto
                    li.nav-item
                        a.nav-link(href="/") Home
                    li.nav-item
                        a.nav-link(href="#") Pricing
            .navbar-right
                if user
                    span.navbar-text Hello #{user.username}!
            .navbar-right
                if user 
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href="/logout") Logout
                else 
                    ul.navbar-nav.mr-auto
                        li.nav-item
                            a.nav-link(href="/signup") Sign up
                        li.nav-item
                            a.nav-link(href="/login") Login
                