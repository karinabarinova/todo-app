doctype html
html(lang='en')
    include ../common/header.pug
    +head("Todo App")
    body
        header 
            include ../common/navbar.pug
            +navbar()
            .container.mt-5
                .row
                    .col-sm-12.offset-md-2.col-md-8
                        .jumbotron
                            h2.text-center Sign up
                            .row
                                .col-sm-12.col-md-12
                                    form(action='/signup', method='POST')
                                        div.formgroup
                                            label.small.mb-1.mt-3 Username:
                                            input(placeholder='Please enter your username', required=true, name='username', type='text', value="").form-control
                                            if (errors && errors.username)
                                                p.small.text-danger #{errors.username}
                                            label.small.mb-1.mt-3 Email:
                                            input(placeholder='Please enter your email', required=true, name='email', type='email', value="").form-control
                                            if (errors && errors.email)
                                                p.small.text-danger #{errors.email}
                                            label.small.mb-1.mt-3 Password:
                                            input(placeholder='New Password',required=true, name='password', type='password', value='').form-control
                                            if (errors && errors.password)
                                                p.small.text-danger #{errors.password}
                                            button.mt-3.btn.btn-primary(type='submit') Sign up
                                            p.mt-2.mb-0
                                                | Already have an account? #[a(href="/login") Log in here].

    include ../common/footer.pug
    +footer()